# 本番環境設定例
# このファイルを .env.production にコピーして使用

# Supabase設定（本番用）
NEXT_PUBLIC_SUPABASE_URL=https://wpwqxhyiglbtlaimrjrx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Keyは本番環境では使用しない（環境変数に設定しない）
# SUPABASE_SERVICE_ROLE_KEY=絶対に設定しない

# 認証設定
NEXT_PUBLIC_USE_LOCAL_AUTH=false  # 本番環境では必ずfalse

# アプリケーション設定
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NODE_ENV=production

# セキュリティ設定
API_KEY_SECRET=your-secure-random-string-minimum-32-characters

# セッション設定
SESSION_SECRET=your-secure-session-secret
SESSION_MAX_AGE=604800  # 7日間（秒）

# レート制限
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# セキュリティモニタリング
ENABLE_SECURITY_MONITORING=true
LOG_SUSPICIOUS_ACTIVITY=true

# CSP（Content Security Policy）設定
CSP_REPORT_URI=https://your-csp-report-endpoint.com