{
  "configurations": {
    "basic": {
      "description": "基本設定 - Vercel APIを使用",
      "config": {
        "mcpServers": {
          "xbrl-financial": {
            "command": "npx",
            "args": ["@xbrl-jp/mcp-server"],
            "env": {
              "XBRL_API_KEY": "xbrl_live_your_key_here",
              "XBRL_API_URL": "https://xbrl-api-minimal.vercel.app/api/v1",
              "API_MODE": "vercel"
            }
          }
        }
      }
    },
    "premium_supabase": {
      "description": "プレミアム設定 - Supabase直接アクセス",
      "config": {
        "mcpServers": {
          "xbrl-financial-direct": {
            "command": "npx",
            "args": ["@xbrl-jp/mcp-server"],
            "env": {
              "API_MODE": "supabase",
              "SUPABASE_URL": "https://zxzyidqrvzfzhicfuhlo.supabase.co",
              "SUPABASE_ANON_KEY": "your_anon_key",
              "SUPABASE_SERVICE_KEY": "your_service_key"
            }
          }
        }
      }
    },
    "development": {
      "description": "開発環境設定 - ローカルAPI",
      "config": {
        "mcpServers": {
          "xbrl-local": {
            "command": "node",
            "args": ["C:/path/to/xbrl-api-minimal/mcp-server/src/server.js"],
            "env": {
              "XBRL_API_KEY": "test_key_123",
              "XBRL_API_URL": "http://localhost:3000/api/v1",
              "API_MODE": "vercel"
            }
          }
        }
      }
    },
    "shared_supabase_mcp": {
      "description": "shared-supabase-mcp-minimal パッケージ使用（APIキー不要版）",
      "config": {
        "mcpServers": {
          "shared-supabase": {
            "command": "npx",
            "args": ["shared-supabase-mcp-minimal"]
          }
        }
      }
    },
    "multi_server": {
      "description": "複数サーバー同時使用",
      "config": {
        "mcpServers": {
          "xbrl-vercel": {
            "command": "npx",
            "args": ["@xbrl-jp/mcp-server"],
            "env": {
              "XBRL_API_KEY": "xbrl_live_key1",
              "API_MODE": "vercel"
            }
          },
          "xbrl-supabase": {
            "command": "npx",
            "args": ["@xbrl-jp/mcp-server"],
            "env": {
              "API_MODE": "supabase",
              "SUPABASE_URL": "https://your-project.supabase.co",
              "SUPABASE_ANON_KEY": "your_key"
            }
          }
        }
      }
    }
  },
  "notes": {
    "api_key_format": "xbrl_live_で始まる文字列",
    "rate_limits": {
      "free": "100,000 requests/day",
      "premium": "1,000,000 requests/day",
      "enterprise": "unlimited"
    },
    "config_locations": {
      "windows": "%APPDATA%\\Claude\\claude_desktop_config.json",
      "macos": "~/Library/Application Support/Claude/claude_desktop_config.json",
      "linux": "~/.config/Claude/claude_desktop_config.json"
    }
  }
}