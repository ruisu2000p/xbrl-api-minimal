# 開発環境設定例
# このファイルを .env.local にコピーして使用

# Supabase設定（開発用）
NEXT_PUBLIC_SUPABASE_URL=https://wpwqxhyiglbtlaimrjrx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# 開発環境でのみService Role Keyを使用（オプション）
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# 認証設定
NEXT_PUBLIC_USE_LOCAL_AUTH=true  # 開発環境ではlocalStorage認証を使用

# アプリケーション設定
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# セキュリティ設定（開発環境用に緩和）
API_KEY_SECRET=development-secret-minimum-32-chars

# セッション設定
SESSION_SECRET=development-session-secret
SESSION_MAX_AGE=2592000  # 30日間（秒）

# レート制限（開発環境では無効化）
RATE_LIMIT_ENABLED=false
MAX_REQUESTS_PER_MINUTE=1000

# セキュリティモニタリング（開発環境では無効化）
ENABLE_SECURITY_MONITORING=false
LOG_SUSPICIOUS_ACTIVITY=false

# 開発環境フラグ（Supabaseで設定）
DEVELOPMENT_MODE=true