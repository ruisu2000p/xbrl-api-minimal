{
  "name": "xbrl-api-minimal",
  "version": "7.0.0",
  "description": "XBRL財務データAPI - bcrypt認証システム完全移行版",
  "mcp": {
    "package": "shared-supabase-mcp-minimal",
    "version": "3.2.0",
    "description": "Secure MCP server for XBRL financial data",
    "repository": "https://www.npmjs.com/package/shared-supabase-mcp-minimal"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint || true",
    "lint:strict": "next lint --max-warnings=0",
    "typecheck": "tsc --noEmit --strict",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "clean": "rimraf .next node_modules",
    "clean:cache": "rimraf .next",
    "clean:deps": "rimraf node_modules package-lock.json",
    "reinstall": "npm run clean:deps && npm install",
    "test": "jest --detectOpenHandles",
    "test:ci": "jest --ci --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPatterns=integration",
    "test:security": "jest --testPathPatterns=security",
    "test:security:input": "jest --testPathPatterns=security/input-validation",
    "test:security:sql": "jest --testPathPatterns=security/sql-injection",
    "test:security:path": "jest --testPathPatterns=security/path-traversal",
    "deploy:staging": "sh scripts/deploy.sh staging",
    "deploy:production": "sh scripts/deploy.sh production",
    "db:migrate": "npx supabase db push",
    "health:check": "curl http://localhost:3000/api/health",
    "check-types": "tsc --noEmit --strict",
    "check-lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "check-all": "npm run typecheck && npm run lint && npm run format:check",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/dompurify": "^3.0.5",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "isomorphic-dompurify": "^2.28.0",
    "lucide-react": "^0.544.0",
    "next": "^14.2.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shared-supabase-mcp-minimal": "^5.6.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.5.2",
    "@types/react": "18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.23",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "jscpd": "^3.5.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "supabase": "^2.40.7",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "resolutions": {
    "webidl-conversions": "^7.0.0"
  },
  "overrides": {
    "webidl-conversions": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check-types",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
