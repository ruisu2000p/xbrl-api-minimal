#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit hook for type checking and linting

echo "ğŸ” Running pre-commit checks..."

# TypeScript type check
echo "ğŸ“ Checking TypeScript types..."
npx tsc --noEmit --strict
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix errors before committing."
  exit 1
fi

# ESLint check
echo "ğŸ”§ Running ESLint..."
npm run lint -- --max-warnings=0
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix linting errors before committing."
  exit 1
fi

# Check for console.log statements
echo "ğŸ” Checking for console.log statements..."
git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' | while read file; do
  if grep -q "console\.log" "$file"; then
    echo "âš ï¸  Warning: console.log found in $file"
  fi
done

# Check for hardcoded secrets
echo "ğŸ”’ Checking for hardcoded secrets..."
git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx|json)$' | while read file; do
  # Check for API keys
  if grep -q "xbrl_[a-zA-Z0-9_-]\{32,\}" "$file"; then
    echo "âŒ Possible API key found in $file"
    echo "Please use environment variables instead."
    exit 1
  fi

  # Check for Supabase service keys
  if grep -q "service_role" "$file" | grep -v "process\.env"; then
    echo "âŒ Possible service role key found in $file"
    echo "Please use environment variables instead."
    exit 1
  fi
done

echo "âœ… All pre-commit checks passed!"